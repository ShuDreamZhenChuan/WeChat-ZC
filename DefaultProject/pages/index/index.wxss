/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.header_view
{
width: 100%;
height: 400rpx;
}
.beader_image
{
  width: 100%;
  height: 100%;
}
.slider-image
{
    display:block;
    width:100%;
    height:100%;
}
.item-menu
{
    width:100%;
    height:300rpx;
}
.menu-list
{
    float:left;
    width:20%;
    box-sizing: border-box;
    padding-bottom:10px;
}
.menu-img{
    width:120rpx;
    height:84rpx;
    display:block;
    margin:0 auto;
    margin-bottom:5px;
}
.menu-desc{
    background-color:#ffffff;
    color:#333333;
    width:100%;
    text-align: center;
    display:block;
    font-size:12px;
}
.item-list
{
  width: 100%;
  height:200rpx;
}
.scroll-view
{
  padding-top: 10px;
  padding-bottom: 10px;
  width: 100%;
  white-space: nowrap;
}
.scroll-item
{
  width:100%;
  box-sizing: border-box;
  padding-bottom:10px;
}
.scroll-view-item_H{
  display:inline-block;
  width: 20%;
  height: 100%;
}